<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iot.LoginPage"
             NavigationPage.HasNavigationBar="False"
           >
    <ContentPage.Content>
        <StackLayout Padding="16,0,16,0" VerticalOptions="Center">
            <Label Text="Welcome to IOT" HorizontalOptions="CenterAndExpand" Margin="0,0,0,16" FontAttributes="Bold" FontSize="Title" />
            <Editor x:Name="usernameEditor" Placeholder="username"/>
            <Entry x:Name="passwordEditor" Placeholder="password" IsPassword="True"/>
            <Button Text="Login" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>